<UserControl x:Class="Booyco_HMI_Utility.CustomMarkers.CustomMarkerEllipse"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="2000" Width="2000">
    <Grid>
        <Grid Margin="1018,1016,2,0">
            <Label x:Name="Label_PopupInfo" Content="" Visibility="Collapsed" Background="Gray" BorderBrush="Black" BorderThickness="2" FontFamily="Segoe UI" FontSize="10"  FontWeight="Normal" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" ></Label>
        </Grid>

        <Ellipse  Name="EllipseMarker" Fill="#99444444" Stroke="Black" Height="10" Width="10" StrokeThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center" MouseLeftButtonDown="EllipseMarker_MouseLeftButtonDown" MouseRightButtonDown="EllipseMarker_MouseRightButtonDown"  ></Ellipse>
        <Ellipse Name="EllipsePositionMarker" Fill="Black" Stroke="Black" Height="4" Width="4" StrokeThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center"></Ellipse>
    </Grid>
</UserControl>
